        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowsMessenger"
        mc:Ignorable="d"
        Title="Test" Height="300" Width="300">
    <Grid>
		<Button x:Name="button" Content="Get Devices" HorizontalAlignment="Left" Margin="29,49,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
		<Label x:Name="label" Content="" HorizontalAlignment="Left" Margin="130,46,0,0" VerticalAlignment="Top"/>
		<Button x:Name="sendButton" Content="Send" HorizontalAlignment="Left" Margin="29,109,0,0" VerticalAlignment="Top" Width="75" Click="sendButton_Click"/>
		<TextBox x:Name="phoneNumber" HorizontalAlignment="Left" Height="23" Margin="123,106,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
		<TextBox x:Name="text" HorizontalAlignment="Left" Height="23" Margin="123,140,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
		<Label x:Name="status" Content="Status: none" HorizontalAlignment="Left" Margin="123,173,0,0" VerticalAlignment="Top"/>
	</Grid>
</Window>
