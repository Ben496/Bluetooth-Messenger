<Window x:Class="WindowsMessenger.NewMessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowsMessenger"
        mc:Ignorable="d"
        Title="Send New Message" Height="300" Width="300">
	<Grid>
		<Button x:Name="sendNewMessage" Content="Send Message" HorizontalAlignment="Left" Margin="136,220,0,0" VerticalAlignment="Top" Width="130" Click="sendNewMessage_Click"/>
		<Label x:Name="label" Content="Phone Number :" HorizontalAlignment="Left" Margin="22,40,0,0" VerticalAlignment="Top"/>
		<Label x:Name="label1" Content="Message Content:" HorizontalAlignment="Left" Margin="22,71,0,0" VerticalAlignment="Top"/>
		<TextBox x:Name="number" HorizontalAlignment="Left" Height="23" Margin="136,44,0,0" TextWrapping="Wrap" Text="&#xD;&#xA;" VerticalAlignment="Top" Width="120"/>
		<TextBox x:Name="message" HorizontalAlignment="Left" Height="99" Margin="22,97,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="234"/>

	</Grid>
</Window>
